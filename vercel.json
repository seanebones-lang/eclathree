{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://elca-blockbusters-api.onrender.com/api/:path*"
    }
  ],
  "functions": {
    "app/**/*.tsx": {
      "maxDuration": 60
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "https://elca-blockbusters-api.onrender.com"
  }
}